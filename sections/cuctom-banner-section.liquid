{% style %}
.custom-promo-showcase {
  background-size: cover;
  background-position: center;
  padding-top: 60px;
  padding-bottom: 60px;
}

.promo-inner {
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: space-around;
  gap: 40px;
}

.promo-left {
  color: #fff;
  text-align: center;
  position: relative;
}

.promo-card {
  text-align: center;
  position: absolute;
  top: 25%;
  transform: translate(53%);
}

.promo-card h2 {
  text-transform: uppercase;
  color: #fff;
  font-size: 24px;
  line-height: 1.2;
  margin-bottom: 10px;
}

.promo-card p {
  margin-bottom: 20px;
}

.promo-btn {
  background: #ffffff;
  color: #0077c8;
  padding: 12px 26px;
  border-radius: 25px;
  font-weight: 600;
  text-decoration: none;
  display: inline-block;
}

.promo-products img {
  max-height: 360px;
  margin-left: 20px;
}

/* RESPONSIVE */
@media (max-width: 1175px) {
  .promo-card {
    transform: translate(48%);
  }
}
@media (max-width: 1100px) {
  .promo-card {
    transform: translate(43%);
  }
}
@media (max-width: 1048px) {
  .promo-card {
    transform: translate(36%);
  }
}
@media (max-width: 1024px) {
  .promo-card {
    transform: translate(49%);
  }
  .promo-inner {
    flex-direction: column;
    text-align: center;
  }

  .promo-left,
  .promo-right {
    flex: 100%;
  }

  .promo-products {
    justify-content: center;
  }

  .promo-products img {
    max-height: 260px;
    margin: 10px;
  }
}
@media (max-width: 680px) {
  .promo-card {
    width: 66%;
    text-align: center;
    position: absolute;
    top: 28%;
    left: -6%;
    transform: translate(34%, -10%);
  }
}
@media (max-width: 610px) {
  .promo-card {
    width: 60%;
    font-size: 12px;
    text-align: center;
    position: absolute;
    top: 28%;
    left: -6%;
    transform: translate(42%, -3%);
  }
  .promo-card h2 {
    color: #fff;
    font-size: 20px;
    line-height: 1.2;
    margin-bottom: 10px;
  }
}
@media (max-width: 482px) {
  .promo-card {
    width: 59%;
  }
  .promo-card h2 {
    font-size: 14px;
  }
  .promo-btn {
    padding: 5px 20px;
  }
}
@media (max-width: 400px) {
  .promo-card p {
    margin: 0 !important;
  }
}
@media (max-width: 338px) {
  .promo-card {
    width: 50%;
    transform: translate(60%, -4%);
    font-size: 9px;
  }
  .promo-card h2 {
    font-size: 10px;
  }
  .promo-btn {
    padding: 5px 9px;
  }
}
{% endstyle %}

<section
  class="page-width custom-promo-showcase"
  style="
    {% if section.settings.section_bg %}
      background-image: url({{ section.settings.section_bg | image_url }});
    {% endif %}
  "
>
<div class="ib-custom-container">
  <div class="promo-inner">

    <!-- LEFT PROMO CARD -->
    <div class="promo-left">
      <img src="{{ section.settings.left_card_bg | image_url }}" alt="">
      <div class="promo-card">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.text }}</p>

        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="promo-btn">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <!-- RIGHT PRODUCTS -->
    <div class="promo-right">
      <div class="promo-products">
        {% if section.settings.product_1 %}
          <img src="{{ section.settings.product_1 | image_url }}" alt="">
        {% endif %}
        
      </div>
    </div>

  </div>
</div>
</section>

{% schema %}
{
  "name": "Custom Banner Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "section_bg",
      "label": "Section Background (yellow burst)"
    },
    {
      "type": "image_picker",
      "id": "left_card_bg",
      "label": "Left Card Background (blue shape)"
    },
    {
      "type": "image_picker",
      "id": "product_1",
      "label": "Product Image 1 (PNG)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "EXCLUSIVE CM.COM SAVING"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "The best deals are right here!"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SEE ALL CURRENT PROMOTIONS"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner Section"
    }
  ]
}
{% endschema %}
