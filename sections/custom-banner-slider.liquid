{% style %}

.custom-banner {
  position: relative;
  width: 100%;
  overflow: hidden;
}

/* =======================
   DESKTOP STYLES
======================= */

.banner-wrapper {
  width: 100%;
  min-height: 500px;
  max-height: 650px;
  background-size: cover;
  background-position: center;
  position: relative;
  z-index: 1;
}
.ib-banner-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.banner-content {
  width: 50%;
  max-width: 520px;
  color: #ffffff;
}

.banner-heading {
  font-size: 70px;
  font-weight: 700;
  line-height: 1.05;
  letter-spacing: -3px;
  text-transform: uppercase;
  margin-bottom: 16px;
  color: #ffffff;
}

.banner-text {
  font-size: 18px;
  line-height: 1.5;
  margin-bottom: 28px;
}

.custom-banner-button {
  display: inline-block;
  padding: 20px 30px;
  background: #ffffff;
  color: #ff009d;
  text-decoration: none;
  font-size: 16px;
  font-weight: 600;
  border-radius: 50px;
  transition: all 0.3s ease;
  text-transform: uppercase;
  line-height: 15px;
}

.custom-banner-button:hover {
  background: #ff009d;
  color: #ffffff;
}

.banner-image {
  width: 50%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.banner-image img {
  max-width: 420px;
  width: 100%;
  height: auto;
  object-fit: contain;
}

/* =======================
   TABLET
======================= */

@media (max-width: 1024px) {
  .banner-wrapper {
    padding: 40px;
    min-height: 450px;
  }

  .banner-heading {
    font-size: 48px;
    letter-spacing: -2px;
  }

  .banner-content {
    width: 55%;
  }

  .banner-image {
    width: 45%;
  }
}

/* =======================
   MOBILE (FIXED)
======================= */

@media (max-width: 768px) {

  .ib-banner-wrapper {
    flex-direction: column-reverse;
    justify-content: center;
    text-align: center;
    padding: 40px 20px;
    min-height: auto;
    max-height: none;
    background-position: center top;
  }
  

  .banner-content {
    width: 100%;
    max-width: 100%;
  }

  .banner-heading {
    font-size: 28px;
    line-height: 1.15;
    letter-spacing: -0.5px;
    margin-bottom: 12px;
  }

  .banner-text {
    font-size: 15px;
    line-height: 1.5;
    margin-bottom: 20px;
  }

  .custom-banner-button {
    font-size: 14px;
    padding: 14px 22px;
  }

  .banner-image {
    width: 100%;
    justify-content: center;
    margin-bottom: 24px;
  }

  .banner-image img {
    max-width: 240px;
  }
}

{% endstyle %}

<section class="custom-banner">
  <div
    class="page-width banner-wrapper"
    style="background-image: url({{ section.settings.bg_image | image_url }});"
  >
  <div class="ib-custom-container ib-banner-wrapper">
    <div class="banner-content">
      {% if section.settings.heading != blank %}
        <h1 class="banner-heading">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.text != blank %}
        <p class="banner-text">
          {{ section.settings.text }}
        </p>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <a
          href="{{ section.settings.button_link }}"
          class="custom-banner-button"
        >
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>

    <div class="banner-image">
      {% if section.settings.right_image != blank %}
        <img
          src="{{ section.settings.right_image | image_url }}"
          width="1920"
          height="1080"
          alt="{{ section.settings.right_image.alt | escape }}"
          loading="lazy"
        >
      {% endif %}
    </div>
  </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Banner Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "GO CASHLESS FOR FREE"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Content Text",
      "default": "Cantaloupe Engage installed at no extra cost on select crane & amusement machines"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner Slider"
    }
  ]
}
{% endschema %}
